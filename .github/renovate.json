{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "additionalBranchPrefix": "{{parentDir}}-",
  "configMigration": true,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "lockFileMaintenance": { "enabled": true },
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "baseBranches": [
    "main",
    "master"
  ],
  "git-submodules": {
    "enabled": true
  },
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$",
      "\\.yml$"
    ]
  },
  "automerge": true,
  "packageRules": [
    {
      "matchManagers": [
        "ansible",
        "ansible-galaxy",
        "bun",
        "docker-compose",
        "dockerfile",
        "flux",
        "git-submodules",
        "github-actions",
        "helm-requirements",
        "helm-values",
        "helmfile",
        "helmsman",
        "helmv3",
        "kubernetes",
        "kustomize",
        "nodenv",
        "npm",
        "nvm",
        "terraform",
        "terraform-version",
        "terragrunt",
        "terragrunt-version",
        "tflint-plugin",
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "automerge": true,
      "pinDigests": true
    }
  ]
}
