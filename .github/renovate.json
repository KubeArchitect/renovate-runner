{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "additionalBranchPrefix": "{{parentDir}}-",
  "configMigration": true,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "lockFileMaintenance": { "enabled": true },
  "automerge": true,
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$",
      "\\.yml$"
    ]
  },
  "npm": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "enabledManagers": [
    "ansible",
    "ansible-galaxy",
    "bun",
    "dockerfile",
    "flux",
    "github-actions",
    "helm-values",
    "helmfile",
    "helmv3",
    "kubernetes",
    "kustomize",
    "npm",
    "terraform",
    "terraform-version",
    "tflint-plugin",
  ],
  "packageRules": [
    { "updateTypes": ["major"], "addLabels": ["SemVer Major"] },
    { "updateTypes": ["minor"], "addLabels": ["SemVer Minor"] },
    { "updateTypes": ["lockFileMaintenance"], "addLabels": ["SemVer lockFileMaintenance"] },
    { "updateTypes": ["patch", "digest", "bump"], "addLabels": ["SemVer Patch"] },
    { "languages": ["js"], "addLabels": ["Lang JS"] }
  ]
}
